@model List<Cinema_Management_System.DTOs.Screening.BasicScreeningDTO>

@{
    ViewData["Title"] = "Movie Screenings";
}

<div class="container">
    <h1>Current Screenings</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No screenings available</div>
    }
    else
    {
        @foreach (var screening in Model)
        {
            <div class="card mb-3" style="max-width: 600px;">
                <div class="row g-0">
                    @if (!string.IsNullOrEmpty(screening.MoviePosterUrl))
                    {
                        <div class="col-md-4">
                            <img src="./images/@screening.MoviePosterUrl" class="img-fluid rounded-start" alt="@screening.Title poster">
                        </div>
                    }
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title">@screening.Title</h3>
                            <p class="card-text fs-5">@screening.DateStartTime.ToString("t") - @screening.DateEndTime.ToString("t")</p>
                            <p class= "card-text">@screening.ShortDescription</p>
                            <a href="#" class="btn btn-primary">Szczegóły</a>
                            <a href="#" class="btn btn-primary">Kup bilet</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

