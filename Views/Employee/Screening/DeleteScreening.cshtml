@model List<Cinema_Management_System.DTOs.Employee.DeleteScreeningDTO>

<h2>Usuñ seanse</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="DeleteScreening" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Wybierz</th>
                <th>Film</th>
                <th>Sala</th>
                <th>Pocz¹tek</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedIds" value="@s.Id" /></td>
                    <td>@s.MovieTitle</td>
                    <td>@s.RoomName</td>
                    <td>@s.DateStartTime.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-danger">Usuñ wybrane</button>
</form>
