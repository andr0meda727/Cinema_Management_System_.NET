@model Cinema_Management_System.DTOs.Employee.AddMovieDTO
@using Cinema_Management_System.Models.Cinema

<h2>Dodaj film</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Add" asp-controller="AddMovie" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title">Tytu³</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieLength">D³ugoœæ filmu(w minutach)</label>
        <input asp-for="MovieLength" class="form-control" />
        <span asp-validation-for="MovieLength" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AgeCategory">Kategoria wiekowa</label>
        <select asp-for="AgeCategory" class="form-control"
                asp-items="Html.GetEnumSelectList<AgeCategory>()">
        </select>
        <span asp-validation-for="AgeCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PosterFile">Plakat</label>
        <input asp-for="PosterFile" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
        <span asp-validation-for="PosterFile" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary mt-2">Zapisz</button>
</form>